{% load static %}
doctype html
html
  head
    meta(charset="utf-8")
    meta(content="width=device-width, initial-scale=1", name="viewport")
    title CONNECT - Login
    link(href="{% static 'file/logo.ico' %}",rel="icon")
    {% load sass_tags %}
    link(href="{% sass_src 'sass/homepage.sass' %}",rel="stylesheet",type="text/css")
    link(href="{% sass_src 'sass/navbar.sass' %}",rel="stylesheet",type="text/css")

  {% include 'navbar.pug' %}

  body

    .container
      .PostColumn
        .header
          img src="./使用者的頭像"
        button #write
        .PostForm
          .header
            img src="./使用者的頭像"
          .user
            p #{使用者的姓名}  
          #myPopup(data-role='popup')  
            form(method="post" action="./資料送去的位址.php")
              input(
                type='text'
                name='title'
                value='活動標題'    
                required 
              )
              input(
                type='text'
                name='subtitle'
                value='副標題'    
              )
              textarea(
                id="textarea"
                maxlength='100'
                placeholder='內容詳情'
                required
              )
              botton(type="submit")發佈

      .divider
        .line
        .word
          p  分類
        select#category
          option(value='recommend')推薦
          option(value='recommend')推薦
          option(value='recommend')推薦
        .word
          p 排序
        select#sort
          option(value='hot')最多人喜歡
          option(value='hot')最多人喜歡
          option(value='hot')最多人喜歡

      .board
        div(data-page="PostUnit_0")
          .frame
          .main
          .mark
            img#mark src="./白色的書籤"
          .title 
            p ＃揪團 去COSTCO
          .subtitle 
            p 有會員卡，缺司機
          .attach  
            img src="./"
            img src="./"
          .like 
            img src="./愛心的圖案"
            a //愛心的數字
          .comment
            img src="./留言的圖案"
            a //留言的數字

        div(data-page="PostUnit_{n}")
          .frame
          .main
          .mark
            img#mark src="./白色的書籤"
          .title 
            p ＃揪團 去COSTCO
          .subtitle 
            p 有會員卡，缺司機
          .attach  
            img src="./"
            img src="./"
          .like 
            img src="./愛心的圖案"
            a //愛心的數字
          .comment
            img src="./留言的圖案"
            a //留言的數字

    #gotop
      p ˄
      
    #eventwindow
      #description
        h1 {{ event_obj.title }}
        #keywords
          #kw1 costco
          p ,
          #kw2 有會員卡
          p ,
          #kw3 缺司機
        #subtitle {{ event_obj.subtitle }}
        #detail {{ event_obj.detail }}

      #member
        #organizer.member
        #bar
        #member1.member
        #member2.member
        #member3.member
        #member4.member
      
      #eventoperate
        #flag
          #flag-y
          #flag-n
          
        #date 2021/5/2
        #organizerpic
        p {{ event_obj.host.username }}

        #likebutton
          #like-y
          #like-n

        #applybutton
          #apply-y
          #apply-n


      #sent
        #background
        #mailicon
        p 已向發起者送出邀請
    
