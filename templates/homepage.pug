{% load static %}
doctype html
html
  head
    meta(charset="utf-8")
    meta(content="width=device-width, initial-scale=1", name="viewport")
    title CONNECT
    link(href="{% static 'file/logo.ico' %}",rel="icon")
    {% load sass_tags %}
    link(href="{% sass_src 'sass/homepage.sass' %}",rel="stylesheet",type="text/css")
    link(href="{% sass_src 'sass/navbar.sass' %}",rel="stylesheet",type="text/css")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
  {% include 'navbar.pug' %}

  body
    #container
      #create
        {% if request.user.is_authenticated %}
        img#userpic(src="{{ request.user.userextend.img.url }}")
        button#insertbox
        {% else %}
        a(href="{% url 'login' %}")
          #userpic
        a#inserta(href="{% url 'login' %}")
          button#insertbox
        {% endif %}
        

      #board
        #divider
          hr#line1.line
          p 分類
          select#category
            option(value='recommend') 推薦
            option(value='recommend') 推薦
            option(value='recommend') 推薦
          p 排序
          select#sort
            option(value='hot') 最多人喜歡
            option(value='hot') 最多人喜歡
            option(value='hot') 最多人喜歡
          hr#line2.line
          
        //
          #postwrapper
            #postype
              #mark
                p +
              #title
                p ＃揪團 去COSTCO
              #subtitle
                p 有會員卡，缺司機
              #attachpic
                img(src="{% static 'file/exiticon.png' %}")
                img(src="{% static 'file/exiticon.png' %}")
            #count
              img#likebutton(src="{% static 'file/like-y.png' %}")
              h 160
              img#comment(src="{% static 'file/msgicon.png' %}")
              h 36
              
        #eventboard
          {% for event in event_obj %}
          a(href="{% url 'event_detail' id=event.pk %}" margin='0')
            #eventpost
              #posttop
                p#post_title.title {{ event.title }}
                p#post_subtitle.subtitle {{ event.subtitle }}
                {% if event.image %}
                img#postimgs(src="{{ event.image.url }}")
                {% else %}
                //#postimgs
                {% endif %}
                #add_pic
                  #addpic_bg
                    #addicon
                  
                  
                #posttag
                  #tags
                
                #postcreatdate
                  //p {{ event.create_date }}
                  
                #postwanted
                  //p {{ event.people_wanted }}
                
              #postbottom
                {% load static %}
                img#likeicon(src="{% static 'file/like-y.png' %}")
                p#likesnum {{ event.number_of_likes }}
              
                {% load static %}
                img#commenticon(src="{% static 'file/commenticon.png' %}")
                p#commentnum {{ event.number_of_comments }}
          {% empty %}
          #eventpost
            p no event
          {% endfor %}
          
          //如果event個數 % 3 = 2，建立一個虛擬div
          #virtualdiv
            #eventpost
            
                
        
        

    .event-detail    
      {% include 'event_detail.pug' %}

    #gotop
      p ˄
    
    #filter1
    #eventcreatewindow
      img#exitbtn2(src="{% static 'file/exiticon.png' %}")
      
      form(action="", method="post", enctype="multipart/form-data") {% csrf_token %}
        #profile
          {% load static %}
          img#user-img(src="{{ user.userextend.img.url }}")
          h1 {{ user.userextend.full_name }}
        {{ form.as_table }}

        #buttons
          input#submit-btn(type="image" src="{% static 'file/submitbtn.png' %}" alt="Submit Form")
          //input#submit-btn(alt="Submit Form") 發佈
          //p#submit-btn 發佈
          
